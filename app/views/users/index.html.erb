<main>
  <div class="container px-5 px-sm-0">
    
      <%= render 'user', user: @user %>
      <%= render 'books/newbook', book: @book %>
      <div class="row">
        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class="table">
    
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan='3'></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image("50x50") %></td>
                <td><p><%= user.name %></p></td>
                <td><%= link_to 'show', user_path(user.id) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>


  
  


 
