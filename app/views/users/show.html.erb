
<div>
  <%= image_tag @user.get_profile_image("50x50") %>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <% if @user ==current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image("50x50") %>
  <% end %>
  <p>Title：<%= link_to book.title, book_path(book.id) %> </p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>