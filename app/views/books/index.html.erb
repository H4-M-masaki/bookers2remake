<main>
  <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
      <div class="col-md-3">
        <%= render partial: "books/userinfo", locals: { user: @user, book: @book } %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thesd>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thesd>
          <tbody>
           <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to book_path(book.id), class: "attachment user profile_image fallback" do %>
                  <%= image_tag book.get_image("50x50") %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
           <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
