
<main>
   <p id="notice">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
   </p>
   <div class="container">
    <div class="row">
     <div class="col-md-3">
      <%= render partial: "books/userinfo", locals: { user: @user, book: @book } %>
     </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
         <table class="table">
          <tbody>
           <tr>
            <td>
             <%= image_tag @user.get_profile_image('40x40'), class: "attachment user profile_image" %><br>
             <%= link_to @user.name, user_path(@user) %>
            </td>
            <td>
             <%= link_to @books.title, book_path(@books.id) %>
            </td>
            <td>
             <%= @books.body %>
            </td>
            <% if @books.user == current_user %>
            <td>
             <%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %>
            </td>
            <td>
             <%= link_to "Destroy", book_path(@books), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか?" %>
            </td>
             <% end %>
           </tr>
         </tbody>
        </table>
      </div>
    </div>
   </div>
</main>